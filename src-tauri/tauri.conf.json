{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "wakubuk",
    "version": "0.0.2"
  },
  "tauri": {
    "allowlist": {
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      },
      "dialog": {
        "open": true
      },
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "execute": true
      },
      "fs": {
        "removeDir": true,
        "removeFile": true,
        "scope": ["**"]
      }
    },
    "bundle": {
      "externalBin": ["bin/pdu"],
      "active": true,
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
      "identifier": "wakubuk.ajnart.fr",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "resizable": true,
        "title": "wakubuk",
        "minWidth": 400,
        "minHeight": 300,
        "width": 700,
        "height": 600
      }
    ]
  }
}
